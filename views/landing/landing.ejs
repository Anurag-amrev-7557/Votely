<% layout("/layouts/boilerplate") %>

<div class="hero">
    <div class="hero-text">
        <h1>Your Transparent Voting Platform</h1>
        <p>Secure, accessible, and real-time voting solutions for everyone.
        <br>
        All end-to-end encrypted.
        </p>
        <div class="hero-btn-container">
            <a href="/start" class="hero-btn" id="getStarted">Get Started</a>
            <a href="/join" class="hero-btn">Login / Register</a>
        </div>
    </div>
    <img src="/resources/hero-image-2.png" alt="hero" class="hero-img">
</div>

<section class="space-section">
  <p id="space-heading">Spaces are ideal for:</p>
  <p>Voters</p>
  <p>Identification and Verification</p>
  <p>Campaigners</p>
  <p>Video Creators</p>
  <p>Designers</p>
  <p>Ballot Transfers</p>
  <p>Recruitments</p>
  <p>Discussions & Polling</p>
</section>

<section class="how-it-works" id="stepguide">
    <div class="stepguide-heading">
      <h1>EVERYONE</h1>
      <h2>Step-by-Step Guide</h2>
      <p>A platform flexible enough for every election</p>
    </div>

    <div class="steps-container">
      <div class="steps">
        <div class="step">
          <h3>Register or Log In</h3>
          <p>Create an account or log in to start voting.</p>
        </div>
    
        <div class="step">
          <h3>Browse Available Elections</h3>
          <p>View a list of elections you can participate in.</p>
        </div>
    
        <div class="step">
          <h3>Select Your Choice and Vote</h3>
          <p>Choose your preferred candidate or option and submit your vote securely.</p>
        </div>
    
        <div class="step">
          <h3>View Results</h3>
          <p>Check the live results after the voting period ends.</p>
        </div>
      </div>
    
      <div class="login-image">
        <img src="../resources/login.png" alt="Login Illustration">
      </div>
    </div>
</section>

<section class="cta">
  <div class="cta-container">
    <h2>Ready to Vote?</h2>
    <p>Join Votely today and make your voice heard in a secure and transparent way.</p>
    <button>Sign Up Now</button>
  </div>
</section>

<section class="why-choose-us">
  <div class="choose-container">
    <h1>SECURE</h1>
    <h2>Why Choose Votely?</h2>
    <div class="features-container">
      
      <div class="feature">
        <h3>Secure & Private</h3>
        <p>All votes are encrypted and anonymous, ensuring complete privacy.</p>
      </div>

      <div class="feature">
        <h3>Real-Time Transparency</h3>
        <p>See live voting results instantly, promoting trust and fairness.</p>
      </div>

      <div class="feature">
        <h3>Accessible to Everyone</h3>
        <p>Designed with accessibility features, including keyboard and screen reader support.</p>
      </div>

      <div class="feature">
        <h3>Global Participation</h3>
        <p>Vote from anywhere in the world with a simple, user-friendly interface.</p>
      </div>

    </div>
  </div>
  
</section>